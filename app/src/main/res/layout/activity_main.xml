<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Rishabh Singh"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Session No.23"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Lodhi Colony"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/power"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10sp"
                        android:layout_marginRight="10sp"
                        android:src="@drawable/power" />

                    <ImageView
                        android:id="@+id/settings"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10sp"
                        android:layout_marginRight="10sp"
                        android:src="@drawable/settings" />

                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10sp"
                        android:layout_marginRight="10sp"
                        android:src="@drawable/user" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="5sp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/q1p1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/p1"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:layout_marginBottom="10sp"
                        android:gravity="center"
                        android:src="@drawable/plus" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:text="Add new player"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/q1p2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/q1p2back"
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:src="@drawable/back" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="20sp"
                            android:text="Player List"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ListView
                            android:id="@+id/pl1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/q1p3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/playerheader"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/playername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="20sp"
                            android:text="Player List"
                            android:textColor="#FFFFFF"
                            android:textSize="23sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/profile_image"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_gravity="center"
                                android:layout_marginRight="20sp"
                                android:src="@drawable/user"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ListView
                            android:id="@+id/dl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/q1p4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/playerheader2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/playername2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="5sp"
                            android:text="Player List"
                            android:textColor="#FFFFFF"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginEnd="10sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="5sp"
                            android:background="#EAEAEA" />

                        <TextView
                            android:id="@+id/drillname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="5sp"
                            android:text="Drill Name"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp" />

                        <LinearLayout
                            android:id="@+id/q1p4data"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="15sp"
                            android:layout_marginLeft="15sp"
                            android:layout_marginRight="15sp"
                            android:layout_marginStart="15sp"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                android:layout_gravity="center"
                                android:layout_marginRight="20sp"
                                android:src="@drawable/user"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/q1starttext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10sp"
                                    android:layout_marginStart="10sp"
                                    android:text="Player is ready to perform drill"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp" />

                                <LinearLayout
                                    android:id="@+id/timerpanel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10sp"
                                    android:layout_marginStart="10sp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/timer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="02:33"
                                        android:textColor="#FFFFFF"
                                        android:textSize="30sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/q1ideal"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginBottom="5sp"
                                            android:gravity="center"
                                            android:text="(Ideal Time: 03:30)"
                                            android:textColor="#FFFFFF"
                                            android:textSize="8sp" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/q1startpanel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10sp"
                                    android:layout_marginStart="10sp"
                                    android:layout_marginTop="10sp"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_width="35sp"
                                        android:layout_height="20sp"
                                        android:background="@drawable/strole"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/drillback"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/prev" />

                                        <Button
                                            android:id="@+id/back"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="?attr/selectableItemBackground"
                                            android:drawablePadding="20sp"
                                            android:textColor="#FFFFFF"
                                            android:textSize="5sp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="90sp"
                                        android:layout_height="20sp"
                                        android:layout_marginLeft="5sp"
                                        android:layout_marginStart="5sp"
                                        android:background="@drawable/button"
                                        android:orientation="horizontal">

                                        <Button
                                            android:id="@+id/q1start"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="?attr/selectableItemBackground"
                                            android:text="Start Drill"
                                            android:textColor="#FFFFFF"
                                            android:textSize="10sp" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/stopwatchpanel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10sp"
                                    android:layout_marginLeft="10sp"
                                    android:layout_marginStart="10sp"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <ImageView
                                        android:id="@+id/q1stop"
                                        android:layout_width="30sp"
                                        android:layout_height="30sp"
                                        android:src="@drawable/stop" />

                                    <ImageView
                                        android:id="@+id/q1pause"
                                        android:layout_width="30sp"
                                        android:layout_height="30sp"
                                        android:layout_marginLeft="20sp"
                                        android:layout_marginStart="20sp"
                                        android:src="@drawable/pause" />

                                    <ImageView
                                        android:id="@+id/q1reset"
                                        android:layout_width="30sp"
                                        android:layout_height="30sp"
                                        android:layout_marginLeft="20sp"
                                        android:layout_marginStart="20sp"
                                        android:src="@drawable/reset" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/q1p4reps"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10sp"
                                    android:layout_marginStart="10sp"
                                    android:layout_weight="0.2"
                                    android:text="Repetitions Performed: "
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />

                                <EditText
                                    android:id="@+id/reps"
                                    android:layout_width="50sp"
                                    android:layout_height="20sp"
                                    android:background="@drawable/stroke"
                                    android:gravity="center"
                                    android:hint="35"
                                    android:inputType="number"
                                    android:textColor="#FFFFFF"
                                    android:textColorHint="#80FFFFFF"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="90sp"
                                android:layout_height="25sp"
                                android:layout_gravity="end"
                                android:layout_marginEnd="10sp"
                                android:layout_marginLeft="5sp"
                                android:layout_marginRight="10sp"
                                android:layout_marginStart="5sp"
                                android:layout_marginTop="25sp"
                                android:background="@drawable/button"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/q1reps"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="?attr/selectableItemBackground"
                                    android:text="Start Drill"
                                    android:textColor="#FFFFFF"
                                    android:textSize="10sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/q1p4qly"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10sp"
                                    android:layout_marginStart="10sp"
                                    android:gravity="center"
                                    android:text="Quality:  "
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp" />

                                <RadioGroup
                                    android:id="@+id/qlygroup"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <android.support.v7.widget.AppCompatRadioButton
                                        android:id="@+id/q1star1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:buttonTint="#3498db" />

                                    <android.support.v7.widget.AppCompatRadioButton
                                        android:id="@+id/q1star2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:buttonTint="#3498db" />

                                    <android.support.v7.widget.AppCompatRadioButton
                                        android:id="@+id/q1star3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:buttonTint="#3498db" />

                                    <android.support.v7.widget.AppCompatRadioButton
                                        android:id="@+id/q1star4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:buttonTint="#3498db" />

                                    <android.support.v7.widget.AppCompatRadioButton
                                        android:id="@+id/q1star5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:buttonTint="#3498db" />

                                </RadioGroup>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/q1idealqly"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5sp"
                                    android:gravity="center"
                                    android:text="(Ideal Quality: 5)"
                                    android:textColor="#FFFFFF"
                                    android:textSize="8sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="90sp"
                                android:layout_height="25sp"
                                android:layout_gravity="end"
                                android:layout_marginEnd="10sp"
                                android:layout_marginLeft="5sp"
                                android:layout_marginRight="10sp"
                                android:layout_marginStart="5sp"
                                android:background="@drawable/button"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/q1qly"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="?attr/selectableItemBackground"
                                    android:text="Start Drill"
                                    android:textColor="#FFFFFF"
                                    android:textSize="10sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/q1final"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10sp"
                                    android:layout_marginStart="10sp"
                                    android:gravity="center"
                                    android:text="Time:"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/ttime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10sp"
                                    android:layout_marginStart="10sp"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10sp"
                                    android:layout_marginStart="10sp"
                                    android:gravity="center"
                                    android:text="Repetitions:"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/trepetitions"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10sp"
                                    android:layout_marginStart="10sp"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10sp"
                                    android:layout_marginStart="10sp"
                                    android:gravity="center"
                                    android:text="Quality:"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tquality"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10sp"
                                    android:layout_marginStart="10sp"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <FrameLayout
                                android:layout_width="90sp"
                                android:layout_height="25sp"
                                android:layout_gravity="end"
                                android:layout_marginEnd="10sp"
                                android:layout_marginLeft="5sp"
                                android:layout_marginRight="10sp"
                                android:layout_marginStart="5sp"
                                android:background="@drawable/button"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/q1save"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="?attr/selectableItemBackground"
                                    android:text="SAVE"
                                    android:textColor="#FFFFFF"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />

                            </FrameLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5sp"
                android:layout_marginEnd="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="10sp"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10sp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30sp"
                    android:src="@drawable/plus" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30sp"
                    android:gravity="center"
                    android:text="Add new player"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:weightSum="1">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10sp"
                android:layout_marginEnd="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="5sp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="5sp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimary"
                android:gravity="center"
